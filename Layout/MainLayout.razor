@inherits LayoutComponentBase
@inject NavigationManager MyNavigationManager
<div class="page @(isNavigating ? "layout-slide-out" : "layout-slide-in")">
    <Home isVisible=@isOnHome />

    <div class="sidebar">
        <NavMenu />
        @isOnHome
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code{
    private bool isOnHome => MyNavigationManager.ToBaseRelativePath(MyNavigationManager.Uri) == "home_";

    bool isNavigating = false;

    protected override async Task OnParametersSetAsync()
    {
        isNavigating = true;
        await Task.Delay(500);
        isNavigating = false;
    }
}